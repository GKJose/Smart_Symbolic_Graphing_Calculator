T:=pyramide([0,0,0],[2,0,0],[0,1,0]);
coordonneees(sommets(T));
A:=point([0,0,0]);
B:=point([2,0,0]);
C:=point([1,sqrt(3),0]);
O:=point([1,sqrt(3)/3,2/3*sqrt(6)]);
I:=milieu(A,B);
assume(t=[0.8,0.0,1.0]);
M:=element(segment(A,C),t);
P:=orthogonal(I,droite(I,M));
N:=inter_unique(droite(O,B),P);
L:=normal(longueur2(M,N));
dL:=normal(diff(L,t));
fsolve(numer(dL),t);
subst(L,t,1/2);
equation(P);
normal(coordonnees(N));